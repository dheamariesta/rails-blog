<div class="container new-article">
  <h1>New Article</h1>
  <%= form_for :article, url: articles_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title , class: "title-form-field"%>
    </p>

    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text, class:"text-form-field" %>
    </p>

    <p>
      <%= f.submit %>
    </p>

  <% end %>

  <%= link_to 'Back', articles_path %>
</div>
